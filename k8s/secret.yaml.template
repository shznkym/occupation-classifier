---
# This is a template file. DO NOT apply this directly.
# Use the deploy.sh script which will create the actual secret.yaml file.
# 
# To manually create the secret:
# 1. Encode your Gemini API key:
#    echo -n "your_gemini_api_key_here" | base64
# 2. Replace <BASE64_ENCODED_API_KEY> below with the output
# 3. Save as secret.yaml (without .template extension)
# 4. Apply: kubectl apply -f secret.yaml

apiVersion: v1
kind: Secret
metadata:
  name: gemini-secret
  namespace: occupation-classifier
type: Opaque
data:
  # Replace with base64 encoded Gemini API key
  api-key: <BASE64_ENCODED_GEMINI_API_KEY>
